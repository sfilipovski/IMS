@model IMS.Domain.DTO.Command.ReorderQuantityDto

@{
    ViewData["Title"] = "Reorder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-5 fw-bolder mb-3">Reorder Product</h1>

<h4 class="text-decoration-underline">Warehouse #@Model.WarehouseId</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reorder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="WarehouseId" />
            <div class="form-group">
                <label asp-for="ReorderQuantity" class="control-label fw-bolder mb-2 fs-5"></label>
                <input asp-for="ReorderQuantity" class="form-control" type="number" />
                <span asp-validation-for="ReorderQuantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-3">
                <input type="submit" value="Reorder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
