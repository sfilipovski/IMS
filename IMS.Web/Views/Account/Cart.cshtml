@model IEnumerable<IMS.Domain.Relationship.CartProducts>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-6 fw-bolder">Cart</h1>

<p>
    <a asp-controller="Account" asp-action="Order" class="btn btn-success">Order now</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CartProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartProductQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartProduct.ProductPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.CartProduct.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CartProductQuantity)
            </td>
            <td>
                   $ @Html.DisplayFor(modelItem => item.CartProduct.ProductPrice)
            </td>
            <td class="text-decoration-none">
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
                
            </td>
        </tr>
}
    </tbody>
</table>
