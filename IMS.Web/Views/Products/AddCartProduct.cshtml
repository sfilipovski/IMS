@using IMS.Domain.DTO.Command
@model AddCartProductDto


@{
    ViewData["Title"] = "Add Cart Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Add Product to Cart</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCartProduct" asp-controller="Products" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="CartProduct.ProductName" class="control-label"></label>
                <input asp-for="CartProduct.ProductName" class="form-control" type="text" disabled />
            </div>
            <div class="form-group">
                <label class="control-label">Warehouses</label>
                <select asp-for="WarehouseId" class="form-control"
                        asp-items="ViewBag.Warehouses"
                        id="WarehouseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Products</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}