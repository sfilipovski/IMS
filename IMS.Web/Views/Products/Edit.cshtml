@model IMS.Domain.Models.Product;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Product</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Products" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImageUrl" class="control-label"></label>
                <input asp-for="ProductImageUrl" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdctSKU" class="control-label"></label>
                <input asp-for="ProdctSKU" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Category</label>
                <select asp-for="ProductCategoryId" class="form-control"
                        asp-items="ViewBag.Categories"
                        id="Id"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Supplier</label>
                <select asp-for="ProductSupplierId" class="form-control"
                        asp-items="ViewBag.Suppliers"
                        id="Id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}